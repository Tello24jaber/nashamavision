# =====================================================
# Application Settings
# =====================================================
APP_NAME=Nashama Vision
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# =====================================================
# Server
# =====================================================
HOST=0.0.0.0
PORT=8000

# =====================================================
# Database (Use this for local or Docker Compose)
# =====================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nashama_vision
DB_ECHO=False

# =====================================================
# Redis
# =====================================================
REDIS_URL=redis://localhost:6379/0

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =====================================================
# Object Storage (FOR NOW → USE LOCAL STORAGE ONLY)
# =====================================================
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage

# Leave S3 fields empty for now
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=
S3_ENDPOINT_URL=

# =====================================================
# Security
# =====================================================
SECRET_KEY=dev-secret-key-do-not-use-in-prod
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================================
# CORS
# =====================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================================================
# File Upload Rules
# =====================================================
MAX_UPLOAD_SIZE=5368709120
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv
MIN_VIDEO_DURATION=5     # <—— important for testing
MAX_VIDEO_DURATION=7200

# =====================================================
# Computer Vision
# =====================================================
YOLO_MODEL_PATH=./models/yolov8x.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

TRACKING_METHOD=deepsort
DEEPSORT_MODEL_PATH=./models/deepsort.pb

MAX_AGE=30
MIN_HITS=3

# =====================================================
# Video Processing
# =====================================================
FRAME_EXTRACTION_FPS=25
VIDEO_CODEC=libx264
VIDEO_CRF=23

# =====================================================
# Logging
# =====================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
