# ========================================
# Nashama Vision - Production Environment Variables
# Copy this file to .env.prod and fill in your values
# ========================================

# Database Configuration
POSTGRES_DB=nashama_vision
POSTGRES_USER=nashama
POSTGRES_PASSWORD=your_secure_password_here

# Application Security
SECRET_KEY=your_secret_key_here_min_32_chars
DEBUG=false
ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com

# LLM Provider (Assistant)
# Options: openai, anthropic, local, mock
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o
# LLM_BASE_URL=http://localhost:11434  # For local Ollama

# Storage Configuration
STORAGE_TYPE=local
# STORAGE_TYPE=s3  # If using S3
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# S3_BUCKET_NAME=nashama-vision

# Worker Configuration
WORKERS=4

# Optional: External services
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=INFO
